# .env.example - copia este archivo a .env y ajusta valores para tu entorno

# Django settings
SECRET_KEY=replace_this_with_a_secure_random_value
DEBUG=True

# Database (PostgreSQL)
DB_NAME=water_monitoring_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=127.0.0.1
DB_PORT=5432

# Admin account (used by management command create_admin)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Allowed hosts (comma-separated). Ej: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Opcional: ajustes para producci√≥n
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
